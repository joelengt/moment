.HeaderMain {
    background-image: url('../../images/assets/bg-rd@2x.png');
    background-color: #cff5fe;
    background-repeat: no-repeat;
    height: 620px;
    background-size: cover;
    background-position-y: 0px;
    background-position: 0px 0px;
}

.HeaderMain__box { 
    width: 100%;
    padding-top: 3rem;
    padding-bottom: 3rem;
}

.HeaderMain__logo {
    margin: 0 auto;
    text-align: center;
    max-height: 500px;
}

.HeaderMain__dogs {
    display: none;
}

.HeaderMain__logo--img {
    max-width: 180px;
    margin: 0 auto;
}

.HeaderMain__logo--img img {
    max-width: 100%;
}

.HeaderMain__logo--text {
    color: brown_footer;
}

.HeaderMain__logo--text p {
    font-weight: 100;
    font-family: "Open Sans Regular", sans-serif;
    font-size: 1rem;
}

.HeaderMain__logo--btn {
    padding-top: 17rem;
    padding-bottom: 1rem;
}

.HeaderMain__logo--btn a {
    color: white;
    display: block;
    text-decoration: none;
    background: orange_logo;
    max-width: 138px;
    padding: .5rem 2rem;
    cursor: pointer;
    margin: 0 auto;
    text-align: center;
    border-radius: 5px;
    letter-spacing: 1px;
    box-shadow: 1px 1px 0px 0px #91371E;
    font-family: "Open Sans Bold", sans-serif;
}

@media screen and (min-width: 430px) {
    .HeaderMain {
        background-position-y: -76px;
        background-position: 0px -76px;
    }
}

@media screen and (min-width: 470px) {
    .HeaderMain {
        background-position-y: -213px;
        background-position: 0px -213px;
    }
}

@media screen and (min-width: 570px) {
    .HeaderMain {
        background-position-y: -388px;
        background-position: 0px -388px;
    }
}

@media screen and (min-width: 700px) {
    .HeaderMain {
        background-position-y: -573px;
        background-position: 0px -573px;
    }
}

@media screen and (min-width: 851px) {
    .HeaderMain {
        height: 386px;
        background-image: url('../../images/assets/bg-web.png');
        overflow: hidden;
        background-position-y: 0px;
        background-position: 0px 0px;
    }
    
    .HeaderMain__box { 
        display: block;
        margin: 0 auto;
        text-align: center;
        position: relative;
    }

    .HeaderMain__logo {
       display: inline-block;
       vertical-align: top;
    }

    .HeaderMain__logo--btn {
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    .HeaderMain__logo--btn a {
        font-size: 1rem;
    }

    .HeaderMain__dogs {
        display: inline-block;
    }
    
    .HeaderMain__dogs--cover {
        max-width: 542px;
    }

    .HeaderMain__dogs--cover img {
        max-width: 100%;
    }

}

@media screen and (min-width: 1550px) {
    .HeaderMain {
        background-position-y: -58px;
        background-position: 0px -58px;
    }
}

@media screen and (min-width: 1850px) {
    .HeaderMain {
        background-position-y: -141px;
        background-position: 0px -141px;
    }
}