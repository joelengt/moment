

/* Estilo de la caja usada para el modal*/
/*  Modal (background) */
.modal {
    display: none;
    position: fixed;
    z-index: 999999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(43, 40, 40, 0.8);
}

/* Modal Contenido (Image) */
.modal-content {
    margin: auto;
    display: block;
    width: 500px;
}

.ContentModalAbierto {
    max-width: 500px;
    margin: 0 auto;
    padding: 1rem;
    position: relative;
    margin-top: 4rem;
}

.Cartel__box {
    display: block;
    color: white;
    text-transform: uppercase;
    margin-bottom: 0;
    font-size: .8rem;
    position: relative;
}

.Cartel__top {
    background: #252424;
    display: block;
    background-image: url('../../../images/assets/bg-popup @2x.png');
    background-size: cover;
    background-repeat: no-repeat;
    padding: 2.6rem 2rem 0 2rem;
}

.Cartel__top--logos {
    display: block;
    text-align: center;
}

.Cartel__top--logos--top {
    
}

.Cartel__top--logos--bottom {
    padding-top: .5rem;
}

.Cartel__top--logos--bottom p {
    font-size: .7rem;
    font-family: "Open Sans SemiBold", sans-serif;
}

.Cartel__top--logos__wuf {
    display: inline-block;
    padding-left: 1rem;
    width: 55px;
    vertical-align: middle;
}

.Cartel__top--logos__wuf img {
    max-width: 100%;
}

.Cartel__top--logos__entel {
    display: inline-block;
    width: 85px;
    vertical-align: middle;
}

.Cartel__top--logos__entel img {
    max-width: 100%;
}

.Cartel__top--logos__middle-text {
    display: inline-block;
    vertical-align: middle;
    padding-left: 1rem;
    font-family: "Open Sans SemiBold", sans-serif;
}

.Cartel__top--maps {
    display: block;
    margin: 0 auto;
    text-align: center;
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
    border-bottom: 1px solid orange_logo;
    max-width: 367px;
}

.Cartel__top--letf {
    display: inline-block;
    vertical-align: middle;
    width: 40%;
}

.Cartel__top--letf img {
    max-width: 100%;
}

.Cartel__top--right {
    display: inline-block;
    vertical-align: middle;
    padding-left: 1rem;
    padding-top: 2rem;
    width: 45%;
    font-family: "Open Sans SemiBold", sans-serif;
}

.Cartel__top--right img {
    max-width: 100%;
}

.Cartel__top--right__hogar {
    display: block;
    padding-bottom: 2.5rem;
    font-size: .6rem;
}

.Cartel__top--right__hogar--cover {
    display: inline-block;
    vertical-align: middle;
    width: 40px;
}

.Cartel__top--right__hogar--cover img {
    max-width: 100%;
}

.Cartel__top--right__hogar--text {
    display: inline-block;
    vertical-align: bottom;
    text-align: left;
    
}

.Cartel__top--right__hogar--text  p {
    font-family: "Open Sans Regular";
    padding-top: .3rem;
    font-size: .7rem;
}


/* Letters  */
.Cartel__top--letters {
    text-align: center;
    padding-top: 1.2rem;
    padding-bottom: 1.7rem;
}

.Cartel__top--letters-1 {
    padding-bottom: .3rem;
    font-family: "Open Sans Bold", sans-serif;
    font-size: 1rem;
}

.Cartel__top--letters-2 {
    padding-bottom: 0.3rem;
    font-family: "Open Sans Light", sans-serif;
    font-size: .8rem;
}

.Cartel__top--letters-3 {
    padding-bottom: 0.3rem;
    font-family: "Open Sans BoldItalic", sans-serif;
    font-size: 2.3rem;
}

.Cartel__top--letters-4 {
    padding-bottom: 0.3rem;
    font-family: "Open Sans Light", sans-serif;
    font-size: .8rem;
}

.Cartel__top--letters-5 {
    padding-bottom: 0.3rem;
    font-family: "Open Sans BoldItalic", sans-serif;
    font-size: 2rem;
}

.Cartel__top--letters__textAdopta {
    color: orange_logo;
}

.Cartel__bottom {
    background: #e5e5e5;
    display: block;
    padding-top: 1.4rem;
    padding-bottom: 1.4rem;
    position: relative;
}

.Cartel__box::before {
    content: '';
    height: 0;
    right: 0;
    position: absolute;
    top: -5px;
    transform: rotate(0deg);
    width: 0px;
    height: 0px;
    border: 0;
}

.Cartel__bottom::after {
    content: '';
    height: 0;
    right: 0px;
    position: absolute;
    bottom: -5px;
    transform: rotate(180deg);
    width: 0;
    height: 0px;
    border: 0;
}

.Cartel__uri {
    background: orange_logo;
    max-width: 220px;
    margin: 0 auto;
    color: white;
    text-transform: uppercase;
    text-align: center;
    padding: .5rem 1rem;
    border-radius: 10px;
    font-size: .9rem;
    cursor: pointer;
}


/* Cartel Desktop */
.Cartel__topDesktop {
    display: none;
    background: #252424;
    background-image: url('../../../images/assets/bg-popup @2x.png');
    background-size: cover;
    background-repeat: no-repeat;
    padding: 1rem 0;
}

.Cartel__topDesktop--box {
    margin: 0 auto;
    text-align: center;
    padding-top: 1rem;
}

.Cartel__topDesktop--left {
    display: inline-block;
    width: 33%;
    vertical-align: middle;
}

.Cartel__topDesktop--left img {
    max-width: 100%;
}

.Cartel__topDesktop--right {
    display: inline-block;
    width: 50%;
    vertical-align: middle;
}

/* Texto del Modal (Image Text) */
#caption {
    margin: auto;
    display: block;
    width: 80%;
    max-width: 700px;
    text-align: center;
    color: #ccc;
    padding: 10px 0;
    height: 150px;
}

/* Animacion de zoom en el modal */
.modal-content, #caption {
    -webkit-animation-name: zoom;
    -webkit-animation-duration: 0.6s;
    animation-name: zoom;
    animation-duration: 0.6s;
}

.Content-TermsConditions {
    background: white;
    padding: 3rem;
    margin: 5rem;
}

@-webkit-keyframes zoom {
    from {-webkit-transform:scale(0)}
    to {-webkit-transform:scale(1)}
}

@keyframes zoom {
    from {transform:scale(0)}
    to {transform:scale(1)}
}

/* Boton de cerrar */
.close {
    position: absolute;
    top: 5px;
    right: 26px;
    color: white;
    font-size: 50px;
    font-weight: 100;
    transition: 0.3s;
    background: #ff6329;
    width: 70px;
    height: 31px;
    font-size: 1rem;
    text-align: center;
    line-height: 25px;
    font-family: "Open Sans Light", sans-serif;
    border-radius: 1px 0 0 0;
    padding-left: 0.1rem;
    z-index: 1;
}

.close::before {
    content: '';
    height: 0;
    right: 58px;
    position: absolute;
    top: 14px;
    transform: rotate(270deg);
    width: 23px;
    height: 0px;
    border-right: 4px solid transparent;
    border-left: 4px solid transparent;
    border-bottom: 4px solid #ff6329;
}

.close::after {
    content: 'X';
    background: orange_logo;
    border-radius: 50%;
    height: 40px;
    width: 40px;
    left: 61px;
    position: absolute;
    top: -7px;
    line-height: 38px;
    font-weight: bold;
    font-size: 1.5rem;
    font-family: "Open Sans Bold", sans-serif;
}

.close:hover,
.close:focus {
    color: white;
    text-decoration: none;
    cursor: pointer;
}

